{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-o", "${workspaceFolder}/build/Debug/main", // Output executable path
                "-std=c++11",
                "-Wno-all",
                "-I", "Dependencies",
                "-I", "Dependencies/glad/include",
                "${workspaceFolder}/Main.cpp",
                "${workspaceFolder}/Camera.cpp",
                "${workspaceFolder}/Chunk.cpp",
                "${workspaceFolder}/EBO.cpp",
                "${workspaceFolder}/Shader.cpp",
                "${workspaceFolder}/stb.cpp",
                "${workspaceFolder}/Texture.cpp",
                "${workspaceFolder}/VAO.cpp",
                "${workspaceFolder}/VBO.cpp",
                "${workspaceFolder}/World.cpp",
                "${workspaceFolder}/glad.c", // Add glad.c here
                "-L", "Dependencies/GLFW/lib-vc2022",
                "-lglfw3"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}